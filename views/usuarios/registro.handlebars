<div class="container" align="center">
  {{#each erros}}
      <div class="alert alert-danger">
          {{texto}}
      </div>
  {{else}}

  {{/each}}
  <br>
  <h3>Crie sua conta hoje: </h3>
  <br>
  <div class="card" id="login-form" >
      <div class="card-body text-left">
          <form action="/registro" method="POST">
              <label for="nome">Nome: </label>
                  <input type="text" name="nome" class="form-control mb-2">
              <label for="email">Email: </label>
                  <input type="email" name="email" class="form-control mb-2">
              <label for="senha">Senha: </label>
                  <input type="password" name="senha" class="form-control mb-2">
              <label for="senha2">Repita a sua senha: </label>
                  <input type="password" name="senha2" class="form-control">
              <a href="/cadastro"><button type="submit" class="btn btn-primary btn-sm mt-4"> Criar </button></a>
          </form>
      </div>
  </div>
</div>
